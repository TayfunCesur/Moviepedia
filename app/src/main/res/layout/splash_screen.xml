<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/bgColor">


    <ImageView android:layout_width="150dp" android:layout_height="150dp"
               android:src="@drawable/appicon"
               android:id="@+id/splashImage"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
    />

    <com.tayfuncesur.moviepedia.components.FontedMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_text"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/splashText"
            app:layout_constraintTop_toBottomOf="@+id/splashImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/margin_normal"
            android:textSize="@dimen/text_size_bit_big"/>


</android.support.constraint.ConstraintLayout>